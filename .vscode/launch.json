	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"env": {
				"PYTHONPATH": "${workspaceFolder}"
			},			
		},
		{
			"name": "Python: Atlantis - Fixtures",
			"type": "python",
			"request": "launch",
			"program": "tests/fixtures.py",
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"env": {
				"PYTHONPATH": "${workspaceFolder}"
			},
			"args": [
				"--enable-render",
				"--log-level=DEBUG"
			]
		}
	]
}